{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title">{{ title }}</h2>
        {% for beer in beers %}
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Name : {{ beer.name }}</h5>
              <p class="card-text">Degree : {{ beer.degree }}</p>
              <img src="{{ asset('assets/images/beer.png') }}" alt="beer image"/>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
